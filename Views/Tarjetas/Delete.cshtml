@model Final.Models.Tarjeta

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Está seguro que desea eliminar esta tarjeta?</h3>
@if(ViewBag.error != null){
    <p class="alert alert-danger">El consumo debe ser 0</p>
}
<div>
    <h4>Tarjeta</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.numero)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.numero)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.codigoV)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.codigoV)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.limite)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.limite)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.consumo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.consumo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.titular)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.titular.apellido)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
