@model Final.Models.CajaDeAhorro


@{
    ViewData["Title"] = "Eliminar Titular";
}

<h1>Eliminar Titular</h1>

<h4>CajaDeAhorro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EliminarTitular">
            @if (ViewBag.error != null)
            {
                @switch (ViewBag.error)
                {
                    case (1):
                        <p class="alert alert-danger">La caja tiene que poseer al menos 1 usuario.</p>
                        break;
                }
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="cbu" class="control-label">CBU</label>
                <input asp-for="cbu" class="form-control" readonly />
                <span asp-validation-for="cbu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="idUsuario" class="control-label">Titulares</label>
                <select name="idUsuario" class="form-control">
                    @foreach (var item in  ViewBag.Titulares)
                    {
                        <option value="@item.id">@item.nombre @item.apellido</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
