@model Final.Models.CajaDeAhorro


@{
    ViewData["Title"] = "Retirar";
}

<h1>Retirar</h1>

<h4>CajaDeAhorro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Retirar">
            @if (ViewBag.error != null)
            {
                <p class="alert alert-danger">Ingrese un monto correcto.</p>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="cbu" class="control-label">CBU</label>
                <input asp-for="cbu" class="form-control" readonly />
                <span asp-validation-for="cbu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="saldo" class="control-label">Saldo</label>
                <input asp-for="saldo" class="form-control" readonly />
                <span asp-validation-for="saldo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="Monto" class="control-label">Monto</label>
                <input name="Monto" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Retirar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
