@model Final.Models.CajaDeAhorro

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Estás seguro de que querés eliminar la caja de ahorro?</h3>
@if (ViewBag.error != null)
{
    <p class="alert alert-danger">El saldo debe de ser 0</p>
}
<div>
    <h4>CajaDeAhorro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cbu)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cbu)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.saldo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.saldo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
