@model Final.Models.PlazoFijo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PlazoFijo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @if(ViewBag.error != null){
                @switch(ViewBag.error){
                    case(0):<p class="alert alert-danger">Ingrese un monto correcto.</p>
                    break;

                    case(1):<p class="alert alert-danger">Saldo insuficiente.</p>
                    break;
                }
                
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="monto" class="control-label"></label>
                <input asp-for="monto" class="form-control" />
                <span asp-validation-for="monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="fechaIni" class="control-label"></label>
                <input name="fechaIni" class="form-control" readonly value="@ViewBag.fechaIn"/>
            </div>
            <div class="form-group">
                <label name="fechaFin" class="control-label"></label>
                <input name="fechaFin" class="form-control" readonly value="@ViewBag.fechaFin"/>
            </div>
            <div class="form-group">
                <label asp-for="tasa" class="control-label"></label>
                <input asp-for="tasa" class="form-control" readonly value="@ViewBag.tasa"/>
                <span asp-validation-for="tasa" class="text-danger"></span>
            </div>
            @if(ViewBag.Admin == true){
                <div class="form-group">
                    <label name="cbu" class="control-label">Usuario</label>
                    <select name="cbu" class="form-control">
                        @foreach (var item in ViewBag.cajas)
                        {
                            <option value="@item.cbu">CBU: @item.cbu ; Saldo: @item.saldo</option>
                        }
                    </select>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label name="cbu" class="control-label">Usuario</label>
                    <select name="cbu" class="form-control">
                        @foreach (var item in ViewBag.cajas)
                        {
                            <option value="@item.cbu">CBU: @item.cbu ; Saldo: @item.saldo</option>
                        }
                    </select>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
