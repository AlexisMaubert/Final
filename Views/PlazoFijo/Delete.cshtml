@model Final.Models.PlazoFijo

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Está seguro que desea eliminar este plazo fijo?</h3>
@if(ViewBag.error != null){
    <p class="alert alert-danger">El plazo fijo debe estar pagado</p>
}
<div>
    <h4>PlazoFijo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.monto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.monto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.fechaIni)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fechaIni)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.fechaFin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fechaFin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.tasa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.tasa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.pagado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pagado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.titular)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.titular.apellido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cbu)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cbu)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volvert</a>
    </form>
</div>
